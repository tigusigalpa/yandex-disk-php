{
    "name": "tigusigalpa/yandex-disk-php",
    "description": "PHP SDK for Yandex Disk API integration",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Igor Sazonov",
            "email": "sovletig@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Tigusigalpa\\YandexDisk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tigusigalpa\\YandexDisk\\Tests\\": "tests/"
        }
    },
    "keywords": [
        "yandex",
        "disk",
        "api",
        "sdk",
        "file-upload",
        "file-download"
    ],
    "homepage": "https://github.com/tigusigalpa/yandex-disk-php",
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html=coverage"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tigusigalpa\\YandexDisk\\YandexDiskServiceProvider"
            ],
            "aliases": {
                "YandexDisk": "Tigusigalpa\\YandexDisk\\Facades\\YandexDisk"
            }
        }
    }
}
